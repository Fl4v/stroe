server {
    server_name stroe.co.uk www.stroe.co.uk 178.62.102.16;

    location = /favicon.ico { access_log off; log_not_found off; }

    location /static {
        root /root/home/django/stroe/templates;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    location ~ \.css {
        add_header  Content-Type    text/css;
    }

    location ~ \.js {
        add_header  Content-Type    application/x-javascript;
        }

    access_log      /var/log/nginx/stroe.access.log combined;
    error_log       /var/log/nginx/stroe.error.log warn;

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/stroe.co.uk/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/stroe.co.uk/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = stroe.co.uk) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name stroe.co.uk www.stroe.co.uk 178.62.102.16;
    return 404; # managed by Certbot


}
